<!DOCTYPE html>
<html>
    <head>
        <title>Update a Game</title>
    </head>
    <body>
        <h1>Game Update</h1>
        <%- include("errors.ejs") %>
        <form action="/updateGame" method="post">
            <label for="toBeUpdated">Choose Game to Update: </label>
            <select name="toBeUpdated" id="toBeUpdated">
                <% games.forEach(element => {%>
                    <option value="<%=element.game%>"><%=element.game%></option>
                <%})%>
            </select>
            <br>
            <h4>New Values:</h4>
            <label for="name">Name: </label>
            <input type="text" name="name" id="name">
            <label for="platform">Platform: </label>
            <select name="platform" id="platform">
                <% platforms.forEach(element => {%>
                    <option value="<%=element.name%>"><%= element.name %></option>
                <%})%>
            </select>
            <label for="completion_status">Completion Status: </label>
            <select name="completion_status" id="completion_status">
                <option value="Unplayed">Unplayed</option>
                <option value="Beaten">Beaten</option>
                <option value="100%">100%</option>
                <option value="Invalid">Invalid</option>
            </select>
            <label for="notes">Notes: </label>
            <input type="text" name="notes" id="notes">
            <button type="submit">Submit</button>
        </form>
        <br>
        <a href="/view">Back to home page</a>
    </body>
</html>